@model RollerTest.Domain.Entities.RollerTestreportInfo

@{
    ViewBag.Title = "SampleDecide";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-12">
                    <form method="post" class="form-horizontal" action="~/SampleDecide/SampleDecide">
                        @Html.HiddenFor(x => x.RollerSampleInfoID)
                        @Html.HiddenFor(x => x.RollerTestReportInfoID)
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">试验前状态</label>

                            <div class="col-sm-9">@Html.EditorFor(x => x.StartStatus)</div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">试验前文本</label>

                            <div class="col-sm-9">@Html.EditorFor(x => x.StartText)</div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">试验后状态</label>

                            <div class="col-sm-9">@Html.EditorFor(x => x.EndStatus)</div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <label class="col-sm-2 control-label">试验后文本</label>
                        <div class="col-sm-9">@Html.EditorFor(x => x.EndText)</div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">最终状态</label>
                            <div class="col-sm-9">@Html.EditorFor(x => x.FinalStatus)</div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">开始时间</label>
                            <div class="col-sm-9">@Html.EditorFor(x => x.StartTime)</div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">结束时间</label>
                            <div class="col-sm-9">@Html.EditorFor(x => x.EndTime)</div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="col-lg-offset-5">
                            <input class="btn btn-primary" type="submit" value="提交" />
                            @Html.ActionLink("返回", "Index", "TestBlock")
                        </div>
                 </form>
        </div>
    </div>
</div>


@section Styles {
    @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/iCheck")

    <script type="text/javascript">
        $(document).ready(function () {

            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
}

